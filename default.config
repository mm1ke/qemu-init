##################
# boot settings #
#################

# boot options
# floppy, harddisk, cdrom, network
# if nothing is set, qemu boots from harddisk
#VM_BOOT_DEV="cdrom"

# cdrom
# path to the image file or cd
#VM_CDROM="/path/to/iso"

#############################
# guest settings (required) #
#############################

# Guest architecture, defaults to host arch
#VM_ARCH="x86_64"

# using kernel+initrd
# VM_KERNEL & VM_INITRD must be set to use this feature
# VM_APPEND is optional
#VM_KERNEL=""
#VM_INITRD=""
#VM_APPEND=""

# default host bridge device (required for network typ tap)
BRDEV="virbr0"

# host user to start guest with
VM_USER="kvm"

# kill wait time in seconds (defaults to 80 sec)
#VM_KILL_WAIT="20"
# set the secounds to wait before start vm
#VM_START_WAIT="0"

###################
# guest features  #
###################

# snapshot mode												(DEFAULT=off)
#VM_ENABLE_SNAPSHOTMODE="false"
# virtio serial (clipboard sharing)		(DEFAULT=on)
#VM_ENABLE_VIRTSERIAL="true"
# daemonize														(DEFAULT=on)
#VM_ENABLE_DAEMONIZE="true"
# qemu-guest-agent										(DEFAULT=off)
#VM_ENABLE_QGA="false"
# kvm																	(DEFAULT=on)
#VM_ENABLE_KVM="true"
# enable sdl													(DEFAULT=off)
#VM_ENABLE_SDL="false"
# enable opengl (with SDL/virtio)			(DEFAULT=off)
#VM_ENABLE_GL="true"
# enable usb support									(DEFAULT=on)
#VM_ENABLE_USB="true"

#############################
# guest settings (optional) #
#############################

### guest system ###
# memory															(DEFAULT: 512)
VM_MEMORY="2048"
# number of cores											(DEFAULT: 1)
VM_SMP="cores=2,threads=1,sockets=1"
# language														(DEFAULT: de)
VM_LC="de"
# guest cpu settings									(DEFAULT: empty)
# examples: qemu64,+ssse3,+sse4.1,+sse4.2
# "host" passes all available features to the guest
# windows guests="host,kvm=off,hv_relaxed,hv_spinlocks=0x1fff,hv_vapic,hv_time"
VM_CPU="host"
# machine typ													(DEFAULT: pc)
#	see: qemu-system-x86_64 --machine ?)
VM_MACHINE="q35"

### remote access ###
## enable: true|false
## password: default: empty
## listening ip: default: host ip
## listening port: default port 5800/5900
#
# enable;password;listening ip;listening port
#
VM_REMOTE_ACCESS_SPICE="true"
VM_REMOTE_ACCESS_VNC="true"

### guest network ###
## network typ: user/tap (required)
## mac address: default: random
## network-driver: e1000|rtl8139[DEFAULT]|virtio-net-pci
##	* qemu-system-ARCH -net nic,model=? shows available devices
## default bridge: override default bridge (only for tap's)
#
#-- multiple interfaces are possible --#
#
# network_typ;mac_address;network_driver;bridge_dev
#
VM_NETWORK="tap;;virtio-net-pci"

### guest harddisk ###
## harddisk: path to image (required)
## cache settings: writethrough[DEFAULT]|writeback|none|unsafe
## storage settings: virtio|ide[DEFAULT]|scsi
## Asynchronous IO (AIO) settings: threads[DEFAULT]|native
#
#-- multiple harddisks are possible --#
#
# harddisk;interface;cache;aio
#
VM_HARDDISK="/path/to/image"

### guest devices
## for a list of all possible devices see: qemu-system-x86_64 -device ?
#
#-- multiple devices are possible --#
#eg: --device usb-tablet --device usb-mouse
#
VM_DEVICES="--device usb-tablet"

### guest video settings ###
# display type: (only one can be choosed)
# std|cirrus|vmware|qxl[DEFAULT]|xenfb|tcx|cg3|virtio|none
#
VM_DISPLAY="qxl"

### guest 9p filesystem sharing ###
## mount_tag: any name (required)
## path: path which should be avaiable (required)
## security mode: default none
#
#-- multiple 9p shares are possible --#
#
# mount_tag;path;security_mode
#
#VM_9P_SHARE="name;/path/for/guest;secmode"

### guest usb redir devices ###
## number of usb redir devices
#
#VM_USB_REDIR="1"

### guest sound support ###
## more than one can be choosed (windows 7 does not work with sb16)
## pcspk|sb16|ac97|es1370|hda or sb16,ac97 or all (enable all)
#
#VM_AUDIO="sb16"
