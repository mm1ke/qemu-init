#############################
# guest settings (required) #
#############################

# Guest architecture
# defaults to host arch
#VM_ARCH="x86_64"

# path to the image
# TODO: what about kernel+init or PXE?
VM_IMAGE="/path/to/image"

# using kernel+initrd
# VM_KERNEL & VM_INITRD must be set to use this feature
# VM_APPEND is optional
#VM_KERNEL=""
#VM_INITRD=""
#VM_APPEND=""

# bridge device (required for network typ tap)
BRDEV="virbr0"

# start guest as differnt user
VM_USER="kvm"

# kill wait time in seconds (defaults to 80 sec)
#VM_KILL_WAIT="20"

###################
# guest features  #
###################

# snapshot mode
VM_ENABLE_SNAPSHOTMODE="false"
# harddisk:
VM_ENABLE_HARDDISK="true"
# remote acces:
VM_ENABLE_REOMTE_ACCESS="true"
# virtio serial (clipboard sharing)
VM_ENABLE_VIRTSERIAL="true"
# daemonize
VM_ENABLE_DAEMONIZE="true"
# qemu-guest-agent
VM_ENABLE_QGA="false"
# kvm
VM_ENABLE_KVM="true"

#############################
# guest settings (optional) #
#############################

### guest system ###
# memory
VM_MEMORY="2048"
# number of cores
VM_SMP="2"
# language
VM_LC="de"
# guest cpu settings
# examples: qemu64,+ssse3,+sse4.1,+sse4.2
# "host" passes all available features to the guest
#WARNING: cpu "host" on gentoo-3.10.7 doesnt boot, however: -cpu host,level=9 works (level=9 disables pmu emulation) see bug:
#https://bugs.launchpad.net/qemu/+bug/1037675
VM_CPU="host"
# machine typ (check qemu-system-x86_64 --machine ?)
#VM_MACHINE=""

### remote access ###
# possible is spice/vnc
VM_REMOTE_ACCESS="spice"
# password (only works for spice)
VM_REMOTE_ACCESS_PW=""
# listening ip (default: host ip)
#VM_REMOTE_ACCESS_LISTEN_IP="127.0.0.1"
# listening port (default: ports start at 5800)
#VM_REMOTE_ACCESS_PORT=""

### guest network ###
# network typ (tap[DEFAULT]|none|user)
VM_NET_TYP="tap"
# mac address: random is default
VM_MAC_ADDRESS=""
# network-driver: e1000|rtl8139[DEFAULT]|virtio-net-pci
# qemu-system-ARCH -net nic,model=? shows available devices
VM_NET_DRV="virtio-net-pci"

### guest harddisk ###
# cache settings: writethrough|writeback|none[DEFAULT]|unsafe 
VM_IMG_CACHE="none"
# storage settings: virtio|ide[DEFAULT]|scsi
VM_IMG_IF="ide"
# Asynchronous IO (AIO) settings: threads[DEFAULT]|native
VM_IMG_AIO="threads"

### guest hardware settings ###
# usb devices:
# -usbdevice mouse or -usbdevice tablet
VM_USB="-usbdevice tablet"

# display type: (only one can be choosed)
# std|cirrus|vmware|qxl[DEFAULT]|xenfb|none
VM_DISPLAY="qxl"

# 9p filesystem sharing
# path which should be accessible in the guest
#VM_9P_PATH="/path/for/guest"

# sound (more than one can be choosed) (windows 7 does not work with sb16)
# pcspk|sb16|ac97|es1370|hda or sb16,ac97 or all (enable all)
#VM_AUDIO="sb16"

# other devices
# for a list of all possible devices: qemu -device ?
#VM_OTHERS=""

#################
# boot settings #
#################

# boot options
# floppy, harddisk, cdrom, network
# if nothing is set, qemu boots from harddisk
#VM_BOOT_DEV="cdrom"

# cdrom
# path to the image file or cd
#VM_CDROM="/path/to/iso"
